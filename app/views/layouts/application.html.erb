<!DOCTYPE html>
<html>
  <head>
    <title>BookersLevel2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/cfa43d2715.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left" style ="color:#fff;" >
          <span style="font-size: 20px;">Bookers</span>
        </nav>
        <nav>
        <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to "  Home", user_path(current_user.id), class:'glyphicon glyphicon-home' %>
          </li>
          <li>
            <%= link_to "  Users", users_path, class:'glyphicon glyphicon-user' %>
          </li>
          <li>
            <%= link_to "  Books", books_path, class:'glyphicon glyphicon-book' %>
          </li>
          <li>
           <%= link_to "  logout", destroy_user_session_path, class:'glyphicon glyphicon-log-out', method: :delete %>
          </li>
          <% else %>
          <li>
            <%= link_to "  Home", root_path, class:'glyphicon glyphicon-home' %>
          </li>
          <li>
            <%= link_to "  About", home_about_path, class:'glyphicon glyphicon-link' %>
          </li>
          <li>
            <%= link_to "  sign up", new_user_registration_path, class:'glyphicon glyphicon-new-window' %>
          </li>
          <li>
            <%= link_to "  login", new_user_session_path, class:'glyphicon glyphicon-log-out' %>
          </li>
          <% end %>
        </ul>
      </nav>
      </div>

      <div class="container">
        <div class="row">
          <div class="search-box col-md-offset-4 col-md-6"> 
            <% if user_signed_in? %>
              <%= form_tag(search_path, method: :get) do %>
                <%= text_field_tag(:word) %>
                <%= submit_tag "検索" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    </header>
    <%= yield %>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
