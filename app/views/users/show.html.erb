<div class="container", style="padding-top: 60px;">
	
	<% if notice %>
		<p><%= notice %></p>
	<% end %>

	<% if flash[:update] %>
		<div>
			<p><%= flash[:update] %></p>
		</div>
	<% end %>

	<div class ="row">
		<div class="col-sm-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
			<table class="table", style="margin-top: 20px;">
				<tr>
					<th>name</th>
					<th><%= @user.name %></th>
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= @user.introduction %></th>
				</tr>
			</table>
			<div class="row">
				<% if @user.id == current_user.id %>
					<%= link_to edit_user_path(@user) do %>
					<button class="col-sm-12 btn btn-default glyphicon glyphicon-wrench"></button>
					<% end %>
				<% else %>
					<%= link_to user_path(current_user.id) do %>
					<button class="col-sm-12 btn btn-default glyphicon glyphicon-wrench"></button>
					<% end %>
				<% end %>
			</div>

			<h2>New book</h2>
				<%= form_for(@book, url: books_path) do |f| %>
				<div class="row">
					<label for="book_title">Title</label>
					<%= f.text_field :title, :class => 'col-sm-12' %>
				</div>
				<div class="row", style="padding-top: 10px;">
					<label for="book_body">Opinion</label>
					<%= f.text_area :body, :class => 'col-sm-12'  %>
				</div>	
				<div class="row", style="padding-top: 10px;">
					<%= f.submit 'Create Book', :class=> 'col-sm-12 btn btn-primary' %>
				</div>
				<% end %>
		</div>

		<div class="col-sm-9">
			<h2>Books</h2>
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td><%= link_to book_path(book) do %>
									<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
								<% end %>
							</td>
							<td><%= link_to book_path(book) do %>
									<%= book.title %>
								<% end %>
							</td>
							<td><%= book.body %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
		</div>
	</div>
</div>




