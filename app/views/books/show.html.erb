<% if flash[:create] %>
		<div>
			<%= flash[:create] %>
		</div>
<% end %>
<% if flash[:update] %>
		<div>
			<%= flash[:update] %>
		</div>
<% end %>

<div>
	<h2>User info</h2>
	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg, size:'60x60" %>
	<table>
		<tr>
			<th>name</th>
			<th><%= @user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= @user.introduction %></th>
		</tr>
	</table>
	<% if @user.id == current_user.id %>
		<p><%= link_to "編集", edit_user_path(@user) %></p>
	<% else %>
		<p><%= link_to "編集", user_path(current_user.id) %></p>
	<% end %>
</div>
<div>
	<h2>New book</h2>
	<%= form_for(@book, url: books_path) do |f| %>
		<div>
			<p>Title</p>
			<%= f.text_field :title %>
		</div>
		<div>
			<p>Opinion</p>
			<%= f.text_area :body %>
		</div>	
		<%= f.submit 'Create Book' %>
	<% end %>
</div>

<div>
	<h2>Book detail</h2>
		<table>
			<thead>
				<th>Title</th>
				<th>Opinion</th>
				<th colspan="3"></th>
			</thead>
			<tbody>
				<td><%= attachment_image_tag @books.user, :profile_image, :fill, 45, 45, fallback: "no_image.jpg", size:'45x45' %></td>
				<td><%= @books.title %></td>
				<td><%= @books.body %></td>
				<% if @user.id == current_user.id %>
				<td><%= link_to 'Edit', edit_book_path(@books) %></td>
				<td><%= link_to 'Destroy', book_path(@books), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
				<% end %>
			</tbody>
</div>