<div class="container">
<div>
	<% if @book.errors.any? %>
		<%= @book.errors.count %>errors prohibited this obj from being saved:
		<% @book.errors.full_messages.each do |message| %>
			<br><%= message %>
		<% end %>
	<% end %>
</div>

<div class ="row">
	<div class="col-md-3">
	<h2>User info</h2>
	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size:'60x60' %>
	<table>
		<tr>
			<th>name</th>
			<th><%= @user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= @user.introduction %></th>
		</tr>
	</table>
	<% if @user.id == current_user.id %>
		<p><%= link_to "編集", edit_user_path(@user) %></p>
	<% else %>
		<p><%= link_to "編集", user_path(current_user.id) %></p>
	<% end %>
	</div>
	<div>
		<h2>New book</h2>
		<%= form_for(@book, url: books_path) do |f| %>
			<div>
				<p>Title</p>
				<%= f.text_field :title %>
			</div>
			<div>
				<p>Opinion</p>
				<%= f.text_area :body %>
			</div>	
			<%= f.submit 'Create Book' %>
		<% end %>
	</div>
	</div>

	<div class="col-md-9">
		<h2>Books</h2>
		<% @books.each do |book| %>
			<table>
				<thead>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</thead>
				<tbody>

					<td><%= link_to user_path(@user.id) do %>
						<%= attachment_image_tag book.user, :profile_image, :fill, 45, 45, fallback: "no_image.jpg", size:'45x45' %>
						<% end %>
					</td>
					<td><%= link_to book_path(book.id) do %>
						<%= book.title %>
						<% end %>
					</td>
					<td><%= book.body %></td>
				</tbody>
			</table>
		<% end %>
	</div>
</div>
</div>