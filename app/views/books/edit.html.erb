<div class="container", style="padding-top: 60px;">

	<% if @books.errors.any? %>
		<%= @books.errors.count %>errors prohibited this obj from being saved:
		<% @books.errors.full_messages.each do |message| %>
			<br><%= message %>
		<% end %>
	<% end %>
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<h2 style="font-size: 36px">Editing Book</h2>
			<%= form_for(@books) do |f| %>
				<div class="row">
					<label for="book_title">Title</label>
					<%= f.text_field :title, :class => 'col-xs-12' %>
				</div>
				<div class="row", style="padding-top: 10px;">
					<label for="book_body">Opinion</label>
					<%= f.text_area :body, :class => 'col-xs-12' %>
				</div>
				<div class="row", style="padding-top: 10px;">
					<%= f.submit 'Update Book', :class => 'col-xs-12 btn btn-primary' %>
				</div>
			<% end %>
			<div style="margin-top: 10px;">
				<%= link_to 'Show', book_path(@books) %> | <%= link_to 'Back', books_path %>
			</div>
		</div>
	</div>

</div>


